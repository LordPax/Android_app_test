<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TestActivity"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_pts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pts"
        android:textColor="@color/color_pts"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/img_roi"
        tools:ignore="ContentDescription"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:src="@drawable/roi_b"
        app:layout_constraintTop_toBottomOf="@id/txt_pts"
        android:layout_marginTop="70dp"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/img_roi"
        android:id="@+id/txt_pseudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_pts"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>